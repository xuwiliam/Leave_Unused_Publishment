<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:myview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leave_unused_publishment.MainActivity" >

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/login_color"
        android:text="@string/login"
        android:textSize="20sp"/>
    <com.example.leave_unused_publishment.widget.CircleImageView 
        android:id="@+id/uIcon"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_below="@id/login"
        android:layout_marginTop="10dp"
        android:layout_height="80dp"
        android:src="@drawable/tab_icons_10"
        myview:civ_border_width="4dp"
        myview:civ_border_color="@color/uIcon_color"
        />
    <RelativeLayout
        android:id="@+id/accountlayout"
        android:layout_width="match_parent"
        android:layout_below="@id/uIcon"
        android:layout_height="40dp"
        android:layout_marginTop="10dp">
    <EditText
        android:id="@+id/account"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:hint="唯品会账号/手机号"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text=""
        android:textColor="@color/text_content"
        android:textSize="15sp"/>
    <ImageView
        android:id="@+id/cleanacc"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/x_close_24px"
        android:layout_marginLeft="10dp"/>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:layout_alignParentBottom="true"/>
  </RelativeLayout>
     <EditText
        android:id="@+id/password"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_below="@id/accountlayout"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:hint="密码"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text=""
        android:textColor="@color/text_content"
        android:textSize="15sp"/>
     <View
        android:layout_below="@id/password"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>
     <RelativeLayout
        android:id="@+id/veryfylayout"
    
        android:layout_width="match_parent"
        android:layout_below="@id/password"
        android:layout_height="40dp"
        android:layout_marginTop="20dp">
    <EditText
        android:id="@+id/veryfy"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:hint="验证码"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text=""
        android:textColor="@color/text_content"
        android:textSize="15sp"/>
    <ImageView
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/refresh_24px"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:id="@+id/veryfyimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/refresh"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/veryfyimg"/>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:layout_alignParentBottom="true"/>
  </RelativeLayout>
  <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/veryfylayout"
        android:layout_marginTop="10dp"
        android:text="@string/login"
        android:textSize="15sp"
        android:textColor="@color/login_btn_content"
        android:background="@drawable/btn_bg"/>
  <TextView
        android:id="@+id/registeraccount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:textColor="@color/login_color"
        android:textSize="12sp"
        android:layout_below="@id/login_btn"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/login_btn"/>
   <TextView
        android:id="@+id/forgetpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forget"
        android:textColor="@color/login_color"
        android:textSize="12sp"
        android:layout_below="@id/login_btn"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@id/login_btn"/>
</RelativeLayout>
