<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <include layout="@layout/item_want"/>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
   <ListView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="40dp"
       android:id="@+id/chatpad">
       
   </ListView>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_alignParentBottom="true"
       android:layout_height="wrap_content" >
   <RelativeLayout
       android:id="@+id/inputlayer"
       android:background="@color/login_btn_content"
       android:layout_width="match_parent"
       android:layout_height="40dp">
    <EditText
        android:id="@+id/editchat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="15sp"
        android:background="@drawable/edit_bg"
        android:textColor="@color/text_content"
        android:paddingRight="40dp"
        android:layout_centerVertical="true"/>
    <Button
        android:id="@+id/submitchat"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/addfile"
        android:text=""
        android:textSize="12sp"
        android:textColor="@color/general"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
   </RelativeLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_below="@id/inputlayer"
       android:id="@+id/morefunction"
       android:layout_height="wrap_content">
      <RelativeLayout
          android:layout_width="120dp"
          android:layout_height="50dp"
          android:id="@+id/functionlayout"
          android:visibility="gone"
          android:layout_gravity="center_horizontal">
         
          
       <ImageView
           android:id="@+id/takephoto"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:src="@drawable/choose_from_gallery_1"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="照片"
           android:textColor="@color/text_color_second"
           android:textSize="12sp"
           android:layout_marginLeft="3dp"
           android:layout_below="@id/takephoto"/>
           
       <ImageView
           android:id="@+id/capturephoto"
           android:layout_marginLeft="70dp"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:src="@drawable/take_picture_1"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/capturephoto"
           android:layout_alignLeft="@id/capturephoto"
           android:layout_marginLeft="3dp"
           android:text="拍摄"
           android:textSize="12sp"
           android:textColor="@color/text_color_second"/>
       </RelativeLayout>
   </LinearLayout>
   </RelativeLayout>
  </RelativeLayout>     
</LinearLayout>
